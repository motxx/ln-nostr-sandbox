{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@webbtc/webln-types": "^3.0.0",
    "autoprefixer": "^10.4.17",
    "eslint-config-prettier": "^9.1.0",
    "path": "^0.12.7",
    "postcss": "^8.4.34",
    "prettier": "^3.2.5",
    "react-router-dom": "^6.22.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "@getalby/sdk": "^3.2.3",
    "@nostr-dev-kit/ndk": "./custom-ndk/package",
    "axios": "^1.6.7",
    "bech32": "^2.0.0",
    "nostr-key-value": "^0.3.4",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sha256-uint8array": "^0.10.7"
  },
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx vite build"
